<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFD39B">

	<RelativeLayout
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#8B4513">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/vendroid_icon" />
 

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Edição de Clientes"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold" />
    
    </RelativeLayout>
    

 <RelativeLayout
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal" >

     <ScrollView
         android:id="@+id/ScrollView"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_above="@+id/LinearLayout"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="2dp"
         android:layout_marginRight="2dp"
         android:background="#FFD39B"
         android:orientation="vertical"
         android:overScrollMode="always" >

         <LinearLayout
             android:id="@+id/LinearLayoutLOL"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical" >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >



                 <TextView
                     android:id="@+id/textView1"
                     android:layout_width="100dp"
                     android:layout_height="wrap_content"
                     android:text="Código"
                     android:textAppearance="?android:attr/textAppearanceLarge" />


                 <TextView
                     android:id="@+EditarCliente/txvCodigo"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0"
                     android:textAppearance="?android:attr/textAppearanceLarge" />

             </LinearLayout>

			<ToggleButton
	        android:id="@+EditarCliente/tglbtnPessoa"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textOn="Pessoa Física"
	        android:textOff="Pessoa Jurídica"
	        android:checked="true"/>
             
             
             <TextView
                 android:id="@+id/textView2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Nome"
                 android:textAppearance="?android:attr/textAppearanceMedium" />
             
             <EditText
                 android:id="@+EditarCliente/edtNome"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:hint="Campo Obrigatório..."
                 android:inputType="text"
                 android:maxLength="80" >
             </EditText>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >



                 <TextView
                     android:id="@+EditarCliente/txvCPF"
                     android:layout_width="202dp"
                     android:layout_height="wrap_content"
                     android:text="CPF"
                     android:textAppearance="?android:attr/textAppearanceMedium" />



                 <TextView
                     android:id="@+EditarCliente/txvRG"
                     android:layout_width="202dp"
                     android:layout_height="wrap_content"
                     android:text="RG"
                     android:textAppearance="?android:attr/textAppearanceMedium" />


                 <TextView
                     android:id="@+EditarCliente/txvDataNascimento"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Data Nascimento"
                     android:textAppearance="?android:attr/textAppearanceMedium" />

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal" >

                 <EditText
                     android:id="@+EditarCliente/edtCPF"
                     android:layout_width="200dp"
                     android:layout_height="wrap_content"
                     android:ems="10"
                     android:inputType="number"
                     android:maxLength="14" />

                 <EditText
                     android:id="@+EditarCliente/edtRG"
                     android:layout_width="200dp"
                     android:layout_height="wrap_content"
                     android:ems="10"
                     android:inputType="number"
                     android:maxLength="7" />

                 <EditText
                     android:id="@+EditarCliente/edtDataNascimento"
                     android:layout_width="195dp"
                     android:layout_height="50dp"
                     android:ems="10"
                     android:inputType="date"
                     android:maxLength="10" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >


                 <TextView
                     android:id="@+id/textView7"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Endereço"
                     android:textAppearance="?android:attr/textAppearanceMedium" />

             </LinearLayout>

             <EditText
                 android:id="@+EditarCliente/edtEndereco"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:hint="Campo Obrigatório..."
                 android:inputType="textPostalAddress"
                 android:maxLength="80" />


             <TextView
                 android:id="@+id/textView8"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Bairro"
                 android:textAppearance="?android:attr/textAppearanceMedium" />

             <EditText
                 android:id="@+EditarCliente/edtBairro"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:hint="Campo obrigatório..."
                 android:inputType="textPostalAddress"
                 android:maxLength="65" />


             <TextView
                 android:id="@+id/textView9"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Cidade"
                 android:textAppearance="?android:attr/textAppearanceMedium" />

             <EditText
                 android:id="@+EditarCliente/edtCidade"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:inputType="textPostalAddress"
                 android:maxLength="65" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >



                 <TextView
                     android:id="@+id/textView10"
                     android:layout_width="302dp"
                     android:layout_height="wrap_content"
                     android:text="UF"
                     android:textAppearance="?android:attr/textAppearanceMedium" />


                 <TextView
                     android:id="@+id/textView11"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="CEP"
                     android:textAppearance="?android:attr/textAppearanceMedium" />

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal" >

                 <Spinner
                     android:id="@+EditarCliente/spnUF"
                     android:layout_width="300dp"
                     android:layout_height="wrap_content"
                     android:entries="@array/UF"
                     android:prompt="@string/string_uf" />


                 <EditText
                     android:id="@+EditarCliente/edtCEP"
                     android:layout_width="300dp"
                     android:layout_height="wrap_content"
                     android:ems="10"
                     android:inputType="number"
                     android:maxLength="10" />

             </LinearLayout>


             <TextView
                 android:id="@+id/textView12"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Telefone Contato 1"
                 android:textAppearance="?android:attr/textAppearanceMedium" />

             <EditText
                 android:id="@+EditarCliente/edtFoneUm"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:hint="Campo obrigatório..."
                 android:inputType="phone"
                 android:maxLength="13" />


             <TextView
                 android:id="@+id/textView13"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Telefone Contato 2"
                 android:textAppearance="?android:attr/textAppearanceMedium" />

             <EditText
                 android:id="@+EditarCliente/edtFoneDois"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:inputType="phone"
                 android:maxLength="13" />


             <TextView
                 android:id="@+id/textView14"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="E-mail"
                 android:textAppearance="?android:attr/textAppearanceMedium" />

             <EditText
                 android:id="@+EditarCliente/edtEmail"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:inputType="textEmailAddress"
                 android:maxLength="65" />


             <TextView
                 android:id="@+id/textView15"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Rota"
                 android:textAppearance="?android:attr/textAppearanceMedium" />

             <EditText
                 android:id="@+EditarCliente/edtRota"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:clickable="true"
                 android:ems="10"
                 android:enabled="true"
                 android:hint="Clique para pesquisar..."
                 android:inputType="textPersonName" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >




                 <TextView
                     android:id="@+id/textView16"
                     android:layout_width="300dp"
                     android:layout_height="wrap_content"
                     android:text="Data de cadastro"
                     android:textAppearance="?android:attr/textAppearanceLarge" />


                 <TextView
                     android:id="@+EditarCliente/txvData"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="00/00/0000"
                     android:textAppearance="?android:attr/textAppearanceLarge" />

             </LinearLayout>

         </LinearLayout>
     </ScrollView>

     <LinearLayout
         android:id="@+id/LinearLayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:background="#8B4513"
         android:orientation="horizontal" >



         <Button
             android:id="@+EditarCliente/btnSalvar"
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:text="Salvar" />



         <Button
             android:id="@+EditarCliente/btnCancelar"
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:text="Cancelar" />



         <Button
             android:id="@+EditarCliente/btnEditar"
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:text="Editar" />



         <Button
             android:id="@+EditarCliente/btnExcluir"
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:text="Excluir" />

     </LinearLayout>
 </RelativeLayout>

</LinearLayout>