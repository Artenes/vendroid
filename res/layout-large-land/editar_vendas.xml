<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFD39B">

	<RelativeLayout
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#8B4513">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/vendroid_icon" />
 
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Consulta - Vendas"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold" />
    
    </RelativeLayout>
    

 <RelativeLayout
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal" >

     <ScrollView
         android:id="@+id/ScrollView"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_above="@+id/LinearLayout"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="2dp"
         android:layout_marginRight="2dp"
         android:background="#FFD39B"
         android:orientation="vertical"
         android:overScrollMode="always" >

         <LinearLayout
             android:id="@+id/LinearLayoutLOL"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical" >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >



                 <TextView
                     android:id="@+id/textView1"
                     android:layout_width="100dp"
                     android:layout_height="wrap_content"
                     android:text="Código"
                     android:textAppearance="?android:attr/textAppearanceLarge" />


                 <TextView
                     android:id="@+EditarVenda/txvCodigo"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0"
                     android:textAppearance="?android:attr/textAppearanceLarge" />

             </LinearLayout>

             <TableLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 <TableRow
                     android:id="@+id/tableRow1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" >


                     <TextView
                         android:id="@+id/textView6"
                         android:layout_width="510dp"
                         android:layout_height="wrap_content"
                         android:text="Vendedor"
                         android:textAppearance="?android:attr/textAppearanceMedium" />


                     <TextView
                         android:id="@+id/textView7"
                         android:layout_width="510dp"
                         android:layout_height="wrap_content"
                         android:text="Cliente"
                         android:textAppearance="?android:attr/textAppearanceMedium" />

                 </TableRow>

                 <TableRow
                     android:id="@+id/tableRow2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" >


                     <EditText
                         android:id="@+EditarVenda/edtVendedor"
                         android:layout_width="510dp"
                         android:layout_height="wrap_content"
                         android:ems="10"
                         android:inputType="textPersonName" >

                         <requestFocus />
                     </EditText>


                     <EditText
                         android:id="@+EditarVenda/edtCliente"
                         android:layout_width="510dp"
                         android:layout_height="wrap_content"
                         android:ems="10"
                         android:inputType="textPersonName" />

                 </TableRow>
             </TableLayout>

             <TableLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 <TableRow
                     android:id="@+id/tableRow3"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" >



                     <TextView
                         android:id="@+id/textView2"
                         android:layout_width="255dp"
                         android:layout_height="wrap_content"
                         android:text="For. Pagamento"
                         android:textAppearance="?android:attr/textAppearanceMedium" />


                     <TextView
                         android:id="@+id/textView4"
                         android:layout_width="255dp"
                         android:layout_height="wrap_content"
                         android:text="Desconto"
                         android:textAppearance="?android:attr/textAppearanceMedium" />


                     <TextView
                         android:id="@+id/textView5"
                         android:layout_width="255dp"
                         android:layout_height="wrap_content"
                         android:text="Acréssimo"
                         android:textAppearance="?android:attr/textAppearanceMedium" />


                     <TextView
                         android:id="@+id/textView8"
                         android:layout_width="255dp"
                         android:layout_height="wrap_content"
                         android:text="Total da Venda"
                         android:textAppearance="?android:attr/textAppearanceMedium" />

                 </TableRow>

                 <TableRow
                     android:id="@+id/tableRow4"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" >


                     <EditText
                         android:id="@+EditarVenda/edtFormaPagamento"
                         android:layout_width="255dp"
                         android:layout_height="wrap_content"
                         android:ems="10"
                         android:inputType="textPersonName" />


                     <EditText
                         android:id="@+EditarVenda/edtDesconto"
                         android:layout_width="255dp"
                         android:layout_height="wrap_content"
                         android:ems="10"
                         android:inputType="numberDecimal" />


                     <EditText
                         android:id="@+EditarVenda/edtAcressimo"
                         android:layout_width="255dp"
                         android:layout_height="wrap_content"
                         android:ems="10"
                         android:inputType="numberDecimal" />


                     <EditText
                         android:id="@+EditarVenda/edtTotalVenda"
                         android:layout_width="255dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:ems="10"
                         android:inputType="numberDecimal" />

                 </TableRow>

            
             </TableLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

             </LinearLayout>
             
               <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal" >


                 <TextView
                     android:id="@+id/textView16"
                     android:layout_width="200dp"
                     android:layout_height="wrap_content"
                     android:text="Data do registro"
                     android:textAppearance="?android:attr/textAppearanceLarge" />

                 <TextView
                     android:id="@+EditarVenda/txvData"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="00/00/0000"
                     android:textAppearance="?android:attr/textAppearanceLarge" />

             </LinearLayout>
             
         </LinearLayout>
     </ScrollView>

     <LinearLayout
         android:id="@+id/LinearLayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:background="#8B4513"
         android:orientation="horizontal" >


         <Button
             android:id="@+EditarVenda/btnRelancarVenda"
             android:layout_width="340dp"
             android:layout_height="wrap_content"
             android:text="Relancar Venda" />

         <Button
             android:id="@+EditarVenda/btnVoltar"
             android:layout_width="340dp"
             android:layout_height="wrap_content"
             android:text="Voltar" />

         <Button
             android:id="@+EditarVenda/btnExcluir"
             android:layout_width="340dp"
             android:layout_height="wrap_content"
             android:text="Excluir" />

         
     </LinearLayout>
 </RelativeLayout>

</LinearLayout>