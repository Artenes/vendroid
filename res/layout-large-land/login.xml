<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD39B"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/vendroid_um" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="LOG IN"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#8B4513"
        android:textSize="50dp" />


    <EditText
        android:id="@+login/edtUsuario"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+login/edtSenha"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:hint="UsuÃ¡rio"
        android:inputType="textShortMessage">
        <requestFocus />
     </EditText>

    <EditText
        android:id="@+login/edtSenha"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+login/edtUsuario"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword" >
    </EditText>

    <Button
        android:id="@+login/btnEntrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+login/edtSenha"
        android:layout_below="@+login/edtSenha"
        android:text="Entrar" />

    <Button
        android:id="@+login/btnCancelar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+login/btnEntrar"
        android:layout_alignBottom="@+login/btnEntrar"
        android:layout_alignRight="@+login/edtSenha"
        android:text="Cancelar" />

</RelativeLayout>