<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFD39B">

	<RelativeLayout
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#8B4513">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/vendroid_icon" />
 


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Edição - Produtos"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="25sp"
        android:textStyle="bold" />
    
    </RelativeLayout>
    
 <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >   

<ScrollView
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:layout_marginBottom="6dip"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_above="@+id/LinearLayout"
    android:background="#FFD39B"
    >
    
<LinearLayout 
    android:id="@+id/LinearLayoutLOL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >



        <TextView
            android:id="@+id/textView1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Código"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/EditarProduto_txvCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    

    <EditText
        android:id="@+id/EditarProduto_edtDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Campo obrigatório..."
        android:inputType="text"
        android:maxLength="80" >
        <requestFocus />
    </EditText>

            <TextView
            android:id="@+id/textView5"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:text="Marca"
            android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
        android:id="@+id/EditarProduto_edtMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Clique para pesquisar..." />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupo"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/EditarProduto_edtGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Clique para pesquisar..." />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código de Barra"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    


    <EditText
        android:id="@+id/EditarProduto_edtCodigoBarra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="80" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:text="Unidade"
            android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
            android:id="@+id/EditarProduto_edtUnidade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Campo obrigatório..."
            android:inputType="number"
            android:maxLength="10" />
        


        <TextView
            android:id="@+id/textView9"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:text="Estoque Atual"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/EditarProduto_edtEstoqueAtual"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Campo obrigatório..."
            android:inputType="number"
            android:maxLength="10" />
        

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estoque Mínimo"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/EditarProduto_edtEstoqueMinimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Campo obrigatório..."
            android:inputType="number"
            android:maxLength="65" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Situação Tributária"
        android:textAppearance="?android:attr/textAppearanceMedium" />



    <Spinner
        android:id="@+id/EditarProduto_spnSituacaoTributaria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/SituacaoTributaria"
        android:prompt="@string/string_situacaotributaria" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="NCM"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <EditText
                android:id="@+id/EditarProduto_edtNCM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:maxLength="10" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="ICMS"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <EditText
                android:id="@+id/EditarProduto_edtICMS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="3" />

        
            <TextView
            android:id="@+id/textView12"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:text="Preço Compra"
            android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
        android:id="@+id/EditarProduto_edtPrecoCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Campo obrigatório..."
        android:inputType="numberDecimal"
        android:maxLength="10" />
            

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço Custo"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/EditarProduto_edtPrecoCusto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Campo obrigatório..."
        android:inputType="numberDecimal"
        android:maxLength="13" >


    </EditText>
    
          <TextView
              android:id="@+id/textView14"
              android:layout_width="302dp"
              android:layout_height="wrap_content"
              android:text="Valor a Vista"
              android:textAppearance="?android:attr/textAppearanceMedium" />

                    <EditText
              android:id="@+id/EditarProduto_edtPrecoVista"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:ems="10"
              android:hint="Campo obrigatório..."
              android:inputType="numberDecimal" />

          <TextView
              android:id="@+id/textView15"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Valor a Prazo"
              android:textAppearance="?android:attr/textAppearanceMedium" />

          <EditText
              android:id="@+id/EditarProduto_edtPrecoPrazo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:ems="10"
              android:hint="Campo obrigatório..."
              android:inputType="numberDecimal" />

        <ToggleButton
            android:id="@+id/EditarProduto_tglbtnMargemLucro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOff="Margem Lucro (desligado)"
            android:textOn="Margem Lucro (ligado)"
        	android:checked="false" />

        <EditText
            android:id="@+id/EditarProduto_edtMargemLucro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Porcentagem"
            android:inputType="number"
            android:maxLength="8" />


        <Button
            android:id="@+id/EditarProduto_btnMargemLucro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerar Preço" />
        

      
      
                      <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal" >




                 <TextView
                     android:id="@+id/textView16"
                     android:layout_width="200dp"
                     android:layout_height="wrap_content"
                     android:text="Data de cadastro"
                     android:textAppearance="?android:attr/textAppearanceLarge" />



                 <TextView
                     android:id="@+id/EditarProduto_txvData"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="00/00/0000"
                     android:textAppearance="?android:attr/textAppearanceLarge" />

             </LinearLayout>
      
                      <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/LinearLayout"
    android:layout_alignParentBottom="true"
    android:background="#8B4513"
    >
        

            <Button
                android:id="@+id/EditarProduto_btnSalvar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Salvar" />


        <Button
            android:id="@+id/EditarProduto_btnCancelar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar" />


        <Button
            android:id="@+id/EditarProduto_btnEditar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Editar" />
        
        <Button
            android:id="@+id/EditarProduto_btnExcluir"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Excluir" />
    
</LinearLayout>
                      
                      
</LinearLayout>

</ScrollView>


</RelativeLayout>
</LinearLayout>