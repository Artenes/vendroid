<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFD39B">

	<RelativeLayout
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#8B4513">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/vendroid_icon" />
 


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Edição - Vendedor"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="25sp"
        android:textStyle="bold" />
    
    </RelativeLayout>
    

 <RelativeLayout
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal" >

     <ScrollView
         android:id="@+id/ScrollView"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_above="@+id/LinearLayout"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="2dp"
         android:layout_marginRight="2dp"
         android:background="#FFD39B"
         android:orientation="vertical"
         android:overScrollMode="always" >

         <LinearLayout
             android:id="@+id/LinearLayoutLOL"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical" >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >



                 <TextView
                     android:id="@+id/textView1"
                     android:layout_width="100dp"
                     android:layout_height="wrap_content"
                     android:text="Código"
                     android:textAppearance="?android:attr/textAppearanceLarge" />


                 <TextView
                     android:id="@+id/EditarVendedor_txvCodigo"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0"
                     android:textAppearance="?android:attr/textAppearanceLarge" />

             </LinearLayout>


             <TextView
                 android:id="@+id/textView2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Nome"
                 android:textAppearance="?android:attr/textAppearanceMedium" />
             
             <EditText
                 android:id="@+id/EditarVendedor_edtNome"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:inputType="text"
                 android:maxLength="80" >
             </EditText>

                 <TextView
                     android:id="@+id/textView4"
                     android:layout_width="302dp"
                     android:layout_height="wrap_content"
                     android:text="Senha"
                     android:textAppearance="?android:attr/textAppearanceMedium"
                     />

                 <EditText
                     android:id="@+id/EditarVendedor_edtSenha"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:ems="10"
                     android:inputType="textPassword" />

                 <TextView
                     android:id="@+id/textView5"
                     android:layout_width="202dp"
                     android:layout_height="wrap_content"
                     android:text="Comissão"
                     android:textAppearance="?android:attr/textAppearanceMedium" />

                 <EditText
                     android:id="@+id/EditarVendedor_edtComissao"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:ems="10"
                     android:inputType="number"
                     android:maxLength="8" />
             
               <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal" >




                 <TextView
                     android:id="@+id/textView16"
                     android:layout_width="200dp"
                     android:layout_height="wrap_content"
                     android:text="Data de cadastro"
                     android:textAppearance="?android:attr/textAppearanceLarge" />



                 <TextView
                     android:id="@+id/EditarVendedor_txvData"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="00/00/0000"
                     android:textAppearance="?android:attr/textAppearanceLarge" />

             </LinearLayout>
             
                 <LinearLayout
         android:id="@+id/LinearLayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:background="#8B4513"
         android:orientation="vertical" >


         <Button
             android:id="@+id/EditarVendedor_btnSalvar"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="Salvar" />


         <Button
             android:id="@+id/EditarVendedor_btnCancelar"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="Cancelar" />


         <Button
             android:id="@+id/EditarVendedor_btnEditar"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="Editar" />
         
         <Button
             android:id="@+id/EditarVendedor_btnExcluir"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="Excluir" />

     </LinearLayout>
               
         </LinearLayout>
     </ScrollView>

   
 </RelativeLayout>

</LinearLayout>