<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD39B"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#8B4513"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vendroid_icon" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Menu Principal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/TelaPrincipal_Sair"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/nsair" android:clickable="true"/>

    <ImageView
        android:id="@+id/TelaPrincipal_Sobre"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/nsobre" android:clickable="true"/>

    <ImageView
        android:id="@+id/TelaPrincipal_Cadastro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="65dp"
        android:src="@drawable/ncadastro" android:clickable="true"/>

    <ImageView
        android:id="@+id/TelaPrincipal_Consulta"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TelaPrincipal_Cadastro"
        android:src="@drawable/nconsulta" android:clickable="true"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/vendroid_um" />

    <ImageView
        android:id="@+id/TelaPrincipal_Contas"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/TelaPrincipal_Sobre"
        android:layout_marginLeft="85dp"
        android:layout_toRightOf="@+id/TelaPrincipal_Sobre"
        android:clickable="true"
        android:src="@drawable/ncontas" />

    <ImageView
        android:id="@+id/TelaPrincipal_Vendas"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/TelaPrincipal_Contas"
        android:layout_marginRight="59dp"
        android:layout_toLeftOf="@+id/TelaPrincipal_Consulta"
        android:clickable="true"
        android:src="@drawable/nvendas" />

</RelativeLayout>